<?xml version="1.0"?>
<object name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="collective.login_monitor">

    <configlet
        title="Monitor user logins"
        action_id="users-login-search"
        appId="collective.login_monitor"
        category="Products"
        condition_expr=""
        icon_expr="string:${portal_url}/group.png"
        url_expr="string:${portal_url}/@@users-login-monitor"
        visible="True"
        i18n:attributes="title">
            <permission>collective.login_monitor: View logins</permission>
    </configlet>
    <configlet
        title="Login Monitor Settings"
        action_id="login_monitor.settings"
        appId="collective.login_monitor_settings"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/portal_registry?q=&amp;qp=prefix%3Acollective.login_monitor.interfaces.IRegistry"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
